{
	"extends": "airbnb-base",
	"rules": {
		//-- development rules
		"no-console": ["off"],
		"no-unused-vars": ["off"],
		//-- production rules
		"no-trailing-spaces": ["error", { "skipBlankLines": true, "ignoreComments": true }],
		"spaced-comment": ["error", "always", {
			"line": {
				"markers": ["--"]
			},
			"block": {
				"markers": ["!"],
				"exceptions": ["*"],
				"balanced": true
			}
		}],
		"no-debugger": "warn",
		"import/no-extraneous-dependencies": ["off"],
		"prefer-const": "warn",
		"comma-dangle": "off",
		"class-methods-use-this": "off"
	},
	"extends": [
		"standard-react"
	],
	"plugins": [
		"react"
	],
	"env": {
		"browser": true
	},
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	}
}
