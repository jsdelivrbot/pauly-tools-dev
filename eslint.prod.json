{
	"extends": "airbnb-base",
	"rules": {
		"no-trailing-spaces": ["error", { "skipBlankLines": true, "ignoreComments": true }],
		"spaced-comment": ["error", "always", {
			"line": {
				"markers": ["--"]
			},
			"block": {
				"markers": ["!"],
				"exceptions": ["*"],
				"balanced": true
			}
		}],
		"no-debugger": "error",
		"import/no-extraneous-dependencies": ["off"]
	}
}
